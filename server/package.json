{
  "name": "air-canvas-backend",
  "version": "2.0.1",
  "description": "Real-time collaborative drawing backend with WebRTC video streaming",
  "main": "index.js",
  "type": "commonjs",

  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "prod": "NODE_ENV=production node index.js",
    "test": "jest --verbose",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },

  "keywords": [
    "real-time",
    "collaboration",
    "drawing",
    "canvas",
    "websocket",
    "webrtc",
    "video",
    "peerjs",
    "socket.io",
    "air-canvas"
  ],

  "author": "Aditya Jha",
  "license": "MIT",

  "repository": {
    "type": "git",
    "url": "https://github.com/adityaj02/air-canvas.git"
  },

  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },

  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "peer": "^0.6.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },

  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  },

  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },

  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "es5"
  },

  "volta": {
    "node": "18.17.1",
    "npm": "9.8.1"
  }
}
