{
  "name": "air-canvas-backend",
  "version": "2.0.0",
  "description": "Real-time collaborative drawing backend with WebRTC video streaming",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --verbose",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "docker:build": "docker build -t air-canvas-backend .",
    "docker:run": "docker run -p 3001:3001 --env-file .env air-canvas-backend",
    "deploy:render": "render deploy"
  },
  "keywords": [
    "real-time",
    "collaboration",
    "drawing",
    "canvas",
    "websocket",
    "webrtc",
    "video",
    "peerjs",
    "socket.io",
    "air-canvas"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/air-canvas-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/air-canvas-backend/issues"
  },
  "homepage": "https://github.com/yourusername/air-canvas-backend#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "peer": "^0.6.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "uuid": "^9.0.0",
    "rate-limiter-flexible": "^4.0.2",
    "socket.io-redis": "^6.1.1",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.2",
    "@types/node": "^20.5.7",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.14",
    "typescript": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server.js",
      "src/**/*.js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-console": "off",
      "consistent-return": "off",
      "no-underscore-dangle": "off",
      "camelcase": "off"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "volta": {
    "node": "18.17.1",
    "npm": "9.8.1"
  }
}